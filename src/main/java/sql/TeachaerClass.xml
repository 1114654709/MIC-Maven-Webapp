<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mic.dao.TeacherClassDao">


	<!-- 分页查询 -->
	<select id="getLength" resultType="Integer" parameterType="Integer">
		SELECT
			COUNT(*) length
		FROM
			course
		WHERE
			teacher_id = #{teaId};
	</select>
	
	
	<!-- 查询出全部的课程 -->
	<select id="fondClassList" resultType="com.mic.bean.Course" parameterType="com.mic.bean.IdAndNo">
			SELECT					 
				id,
				course_name,
				size,
				open_time,
				address
			FROM
				course
			WHERE
				teacher_id = #{id}
			ORDER BY id DESC
			LIMIT
				#{no},10
			
	</select>
	

	
</mapper>  